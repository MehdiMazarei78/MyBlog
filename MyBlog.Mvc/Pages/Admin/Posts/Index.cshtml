@page
@model MyBlog.Mvc.Pages.Admin.Posts.IndexModel

@{
    ViewData["Title"] = "لیست پست ها";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست پست ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست پست های سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-md-12" style="margin: 10px 0;">

                    <a asp-page="CreatePost" class="btn btn-outline btn-success">افزودن پست جدید</a>

                </div>

                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            لیست پست ها
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">

                                    <div class="col-md-12" style="margin: 10px 0;">



                                    </div>
                                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                        <thead>
                                            <tr>
                                                <th>تصویر</th>
                                                <th>عنوان</th>
                                                <th>وضعیت</th>
                                                <th>نویسنده</th>
                                                <th>دستورات</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.ListPost)
                                            {
                                            <tr>
                                                <td>
                                                    <img src="/images/PostImage/thumb/@item.ImageName" class="thumbnail" />
                                                </td>
                                                <td>@item.Title</td>
                                                <td>
                                                    @if (item.Status == "عمومی")
                                                    {
                                                        <p class="text-success" style="font-size:15px; font-weight:900;">عمومی<span style="background-color: green; height: 15px; width: 15px;border-radius: 50%; display: inline-block;margin-right:5px;"></span></p>
                                                    }
                                                    else
                                                    {
                                                        <p class="text-danger" style="font-size:15px; font-weight:900;">خصوصی<span style="background-color: red; height: 15px; width: 15px;border-radius: 50%; display: inline-block;margin-right:5px;"></span></p>
                                                    }
                                                </td>
                                                <td>@item.User</td>
                                                <td>
                                                    <a href="/Admin/Posts/EditPost/@item.PostId" class="btn btn-warning btn-sm">
                                                        ویرایش
                                                    </a>
                                                    <a href="/Admin/Posts/DeletePost/@item.PostId" class="btn btn-warning btn-sm">
                                                        حذف
                                                    </a>

                                                </td>
                                            </tr>
                                            }
                                        </tbody>
                                    </table><div class="row">
                                        <div class="col-sm-6">
                                            <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                                <ul class="pagination">

                                                    @*@for (int i = 1; i <= Model.ListProduct.; i++)
                                                        {
                                                            <li class="paginate_button @((i==Model.UserForAdminViewModel.CurrentPage)?"active":"")" aria-controls="dataTables-example" tabindex="0">
                                                                <a href="/Admin/Users?PageId=@i">@i</a>
                                                            </li>
                                                        }*@

                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>