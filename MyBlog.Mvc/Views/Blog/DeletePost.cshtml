@model MyBlog.Application.DTOs.Posts.PostForDeleteViewModel
@using MyBlog.Application.Tools
@{
    ViewData["Title"] = "حذف پست";
}

<div class="col-md-12 container">
    <div class="panel panel-default">
        <div class="panel-heading">
            حذف پست
        </div>
        <form asp-action="DeletePost" asp-controller="Blog" method="post">

            <div>
                <input type="hidden" value="@ViewData["PostId"].ToString()"
            </div>
            <div class="form-control">
                <table class=" table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                    <thead>
                        <tr>
                            <th>عنوان</th>
                            <th>تاریخ</th>
                            <th>وضعیت</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>

                            <td>@Model.Title</td>

                            <td>@Model.CreateDate.ConvertToShamsi()</td>

                            <td>
                                @if (Model.Status == "عمومی")
                                {
                                    <p class="text-success" style="font-size:15px; font-weight:900;">عمومی<span style="background-color: green; height: 15px; width: 15px;border-radius: 50%; display: inline-block;margin-right:5px;"></span></p>
                                }
                                else
                                {
                                    <p class="text-danger" style="font-size:15px; font-weight:900;">خصوصی<span style="background-color: red; height: 15px; width: 15px;border-radius: 50%; display: inline-block;margin-right:5px;"></span></p>
                                }
                            </td>
                            <td>
                                <input type="submit" value="حذف" class="btn btn-danger" />
                            </td>
                        </tr>

                    </tbody>
                </table>

            </div>
        </form>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>

