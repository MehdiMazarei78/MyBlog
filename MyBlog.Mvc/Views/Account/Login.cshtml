@model MyBlog.Application.DTOs.Users.LoginViewModel
@{
    ViewData["Title"] = "ورود به سایت";
}

<section class="inner-page" id="contact-page">
    <div class="container-fluid" id="page-hero">
        <div class="row">
            <div class="col-12">
                <div class="container">
                    <div class="row">
                        <div class="col-12 px-0">
                            <h1>ورود به ناحیه کاربری</h1>
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/">صفحه نخست</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">ورود</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container py-2 py-md-5">
        <div class="row">
            <div class="col-12 col-sm-10 offset-sm-1">
                <div class="content">
                    <div class="row">
                        <div class="col-12 col-lg-5 text-center">
                            <img src="/images/login.png" alt="">
                        </div>
                        <div class="col-12 col-lg-7 pt-5 pt-md-0 align-self-center">
                            @if (ViewBag.EditProfile == true)
                            {
                                <div class="alert alert-warning">
                                    بدلیل ویرایش پروفایل و بارگزاری مجدد اطلاعات لطفا مجدد لاگین کنید
                                </div>
                            }
                            <div class="title">وارد شوید</div>
                            <p>با عضویت در سایت از همه امکانات سایت بهره مند شوید.</p>
                            <form asp-action="Login" method="post">

                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label for="email">پست الکترونیک :</label>
                                    <input asp-for="Email" type="email" class="form-control" id="email">
                                </div>
                                <div class="form-group">
                                    <label for="password">رمز عبور :</label>
                                    <input asp-for="Password" type="password" class="form-control" id="password">
                                </div>
                                <div class="form-group">
                                    <label><input asp-for="RememberMe" type="checkbox"> مرا به خاطر بسپار</input> </label>
                                </div>
                                <div class="link">
                                    <a href="/Register"> <i class="fa fa-user"></i> عضویت در سایت </a>
                                </div>

                                <div class="form-group">
                                    <a href=""><input type="submit" value="ورود به ناحیه کاربری" class="btn btn-success"></a>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

