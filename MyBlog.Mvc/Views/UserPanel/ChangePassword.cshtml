@model MyBlog.Application.DTOs.Users.ChangePasswordViewModel
@{
    ViewData["Title"] = "ویرایش کلمه عبور";
}

<section class="inner-page" id="profile-page">
    <div class="container-fluid" id="page-hero">
        <div class="row">
            <div class="col-12">
                <div class="container">
                    <div class="row">
                        <div class="col-12 px-0">
                            <h1>ویرایش کلمه کاربری</h1>
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/">صفحه نخست</a></li>
                                    <li class="breadcrumb-item"><a href="#">ناحیه کاربری</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">ویرایش کلمه عبور</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="content">
                    <div class="row">
                        <div class="col-12 col-lg-3">
                            <!-- Side Panel -->
                            @await Component.InvokeAsync("SideBarUserPanel")
                            <!-- /Side Panel -->
                        </div>
                        <div class="col-12 col-lg-9 pl-lg-0 pr-lg-2 mt-2 mt-lg-0">
                            <!-- Profile Fields -->
                            <div class="custom-container bg-light" id="profile-fields">
                                <div class="row pt-2 px-3 ">
                                    <div class="col-12"><h1>اطلاعات شخصی</h1></div>
                                </div>
                                <hr>
                                <div class="container">
                                    <div class="row">


                                        <form asp-action="ChangePassword" method="post">
                                            @if (ViewBag.isSuccess != null)
                                            {
                                                <div class="alert alert-info">کلمه عبور با موفقیت ویرایش شد.</div>
                                                <script>
                                                    // Your delay in milliseconds
                                                    var delay = 3000;
                                                    setTimeout(function () { window.location = "https://localhost:44329/UserPanel"; }, delay);
                                                </script>
                                            }

                                            <div asp-validation-summary="All" class="text-danger"></div>
                                            <div class="form-group">
                                                <label for="name">کلمه عبور فعلی :</label>
                                                <input asp-for="OldPassword" type="password" class="form-control" id="name">
                                            </div>
                                            <div class="form-group">
                                                <label for="email">کلمه عبور جدید :</label>
                                                <input asp-for="Password" type="password" class="form-control" id="email">
                                            </div>
                                            <div class="form-group">
                                                <label for="imageProfile">تکرار کلمه عبور جدید :</label>
                                                <input type="password" asp-for="RePassword" class="form-control mt-2 mb-2" />
                                            </div>


                                            <div class="form-group">
                                                <input type="submit" value="ثبت" class="btn btn-success mb-2">
                                            </div>
                                        </form>


                                    </div>
                                </div>
                            </div>
                            <!-- /Profile Fields -->

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
